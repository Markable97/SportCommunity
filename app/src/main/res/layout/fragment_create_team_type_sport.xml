<?xml version="1.0" encoding="utf-8"?>
<androidx.gridlayout.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:columnCount="2"
    app:rowCount="3">

    <LinearLayout
        android:id="@+id/btnFootball"
        android:background="@drawable/ic_football_2"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_rowWeight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#A5D6A7"
            android:text="Футбол"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnHockey"
        android:background="@drawable/ic_hockey_2"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_gravity="fill" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#80DEEA"
            android:text="Хоккей"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnBasketball"
        android:background="@drawable/ic_basketball_2"
        android:gravity="center"
        android:layout_margin="2dp"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_rowWeight="1" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFCC80"
            android:text="Баскетбол"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnVolleyball"
        android:background="@drawable/ic_volleyball_2"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_gravity="fill">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFF59D"
            android:text="Воллейбол"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnOtherTypeSport"
        android:background="@drawable/ic_other"
        android:gravity="center"
        app:layout_columnSpan="2"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_rowWeight="1" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#EF9A9A"
            android:text="Другое"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.gridlayout.widget.GridLayout>
