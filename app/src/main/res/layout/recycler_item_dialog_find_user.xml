<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:background="@color/lightGrey"
    android:paddingStart="16dp"
    android:paddingTop="8dp"
    android:paddingEnd="16dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgPhotoFindUser"
        android:layout_width="@dimen/account_photo_dim64"
        android:layout_height="@dimen/account_photo_dim64"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_account_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFindUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="#191919"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/imgPhotoFindUser"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Тестовое Имя" />

    <LinearLayout
        android:id="@+id/lnForButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"

        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgPhotoFindUser"
        app:layout_constraintTop_toBottomOf="@+id/tvFindUserName">

        <Button
            android:id="@+id/btnSendInvite"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Пригласить"
             />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>